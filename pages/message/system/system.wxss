page {
  height: 100%;
  background-color: #f7f7f7;
}

.top {
  width: 100%;
  height: 1px;
  background-color: f0f0f0;
}

.card {
  background-color: #fff;
  border-bottom: 1rpx solid #f7f7f7;
  margin: 0 30rpx;
}

.box {
  height: auto;
  background-color: white;
}

.line {
  padding: 16rpx 0;
  width: auto;
  height: 90rpx;
  display: flex;
  margin: 0 30rpx;
}

.time {
  width: auto;
  font-size: 11pt;
  color: #353535;
  flex: 1;
}

.status {
  width: 20rpx;
  height: 20rpx;
  border-radius: 20rpx;
  background-color: #09bb07;
  margin: 35rpx 0rpx 35rpx 30rpx;
}

.content {
  min-height: 90rpx;
  margin: 0rpx 30rpx;
  font-size: 10pt;
  color: #888;
}

.content-title2 {
  font-size: 9pt;
  margin-top: 5rpx;
  min-height: 40rpx;
  line-height: 1.4;
  letter-spacing: 1.2rpx;
}

.content-content {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  width: 100%;
  line-height: 1.4;
  letter-spacing: 1.2rpx;
}
