/* ARMS.wxss */

page{
  width: 100%;
  height: 100%;
  font-size: 11pt;
  margin: 0;
  padding: 0;
  background-color:#f7f7f7;
}
.text{
  margin:130rpx 0 0rpx 0rpx;
  color: #353535;
  font-size: 13pt;
  text-align: center;
  
}
input{
  margin: 100rpx 30rpx 0 30rpx;
  border: 1rpx solid #ccc;
  background-color: #fff;
  color: #888;
  border-radius: 10rpx;
  font-size: 11pt;
  padding-left: 30rpx;
  letter-spacing: 1.2rpx;
  line-height: 90rpx;
  height: 90rpx;
}

.neirong{
  height:auto;
  border: 1rpx solid #ccc;
  background-color: #fff;
  margin: 100rpx 30rpx 0rpx 30rpx;

  padding: 0rpx 30rpx;
}
.overFlowText {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  font-size: 11pt;
  line-height: 1.4;
  height:200rpx;
  letter-spacing: 1.2rpx;
  margin: 30rpx 0rpx;
    border-radius: 8rpx;
}
.body-view{
  margin: 100rpx  0 0 0rpx;
  background-color: #fff;
  line-height: 90rpx;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-content: center;
padding:0 30rpx;
}
.big{
  transform: scale(0.8);

}
.block{
  display: block;

}
.none{
  display: none;
}

.btn{
  font-size: 11pt;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 270rpx;


}
.btnRight{
  height: 70rpx;
  width: 240rpx;
  background-color: #fff;
  border: 1rpx solid #09bb07;
  border-radius: 8rpx;
  line-height: 70rpx;
  text-align: center;
  color: #09bb07;
}
.btnLeft{
  height: 70rpx;
  width: 240rpx;
  background-color: #ccc;
  border: 1rpx solid #f7f7f7;
  border-radius: 8rpx;
  line-height: 70rpx;
  text-align: center;
  color: #fff;
}
