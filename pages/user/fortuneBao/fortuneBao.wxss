/* pages/wo/caifubao/caifubao.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
  letter-spacing: 2rpx;
  color: #fff;
}

.img {
  display: block;
  width: 100%;
  height: 230px;
}

.left {
  width: 100%;
  position: absolute;
  top: 20px;
  left: 0px;
}

.right {
  position: absolute;
  top: 195px;
  right: 20px;
  display: flex;
  flex-direction: row;
}

.tag {
  padding: 12px 0 5px 0;
  width: 100%;
  font-size: 13pt;
  font-weight: bold;
  text-align: center;
  letter-spacing: 5px;
}

.tagRight {
  width: 100%;
  height: 25px;
  line-height: 25px;
  font-size: 9pt;
  font-weight: bold;
  text-align: center;
}

.tag-icon {
  width: 100px;
  height: 100px;
  display: block;
  margin: 0 auto;
}

.icon {
  width: 35px;
  height: 25px;
}

.value {
  float: left;
  width: 100%;
  font-size: 17pt;
  text-align: center;
  padding-bottom: 15px;
}

.valueRight {
  height: 25px;
  line-height: 25px;
  font-size: 11pt;
  text-align: center;
}

.btn1 {
  width: 90%;
  margin-top: 40px;
  margin-left: 5%;
  font-size: 13pt;
  height: 45px;
  line-height: 45px;
}

.btn2 {
  width: 90%;
  margin-top: 20px;
  margin-left: 5%;
  font-size: 13pt;
  height: 45px;
  line-height: 45px;
  letter-spacing: 2rpx;
}


.text {
  display: block;
  widows: 100%;
  text-align: center;
  font-size: 9pt;
  color: #576b95;
  margin-top: 10px;
  letter-spacing: 4rpx;
}
