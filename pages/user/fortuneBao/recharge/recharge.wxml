<view class="line">
  <text class="line-tag">充值金额：</text>
  <input bindinput="recordMoney" class="line-input" type="number" value="{{money}}" />
</view>
<view class="money">
  <view class="money-box">
    <view bindtap="selectMoney" data-money="50" class="box {{boxState1}}" style="margin-left:18px;"> 
        50元
    </view>
    <view bindtap="selectMoney" data-money="200" class="box {{boxState2}}">
       200元
    </view>
    <view bindtap="selectMoney" data-money="500" class="box {{boxState3}}">
        500元
    </view>
    <view bindtap="selectMoney" data-money="1000" class="box {{boxState4}}" style="margin-left:18px;">
        1000元
    </view>
    <view bindtap="selectMoney" data-money="5000" class="box {{boxState5}}">
        5000元
    </view>
    <view bindtap="selectMoney" data-money="10000" class="box {{boxState6}}">
        10000元
    </view>
  </view>
</view>
